---
import { getCollection } from "astro:content";
import MainLayout from '@layouts/MainLayout.astro';
import Hero from '@components/Hero.astro';
import Container from '@components/Container.astro';
import ProjectHero from '@components/ProjectHero.astro';
import Typography from '@components/Typography/index.astro'

const allProjects = await getCollection("projects")
const featuredProjects = allProjects.filter(project => project.data.featured === true);
---

<MainLayout>
		<!-- <Hero /> -->

		<Container class="-mt-20 pt-12 h-screen80">
			<div class="w-full">
				<!-- <Typography as="h2" size="small">A little about me</h2> -->
				<Typography as="h1" size="xlarge" class="max-w-2xl mt-0">Iâ€™m a product designer who connects the dots.</Typography>
				<Typography as="p" size="base" class="max-w-xl mt-5">Over the past 10+ years, I've transformed complex problems into engaging consumer websites and apps. Fostering collaboration, and sharing knowledge along the way.</Typography>
			</div>
		</Container>

		<Container class="pb-12">
			<Typography as="h2" size="base" class="font-semibold py-1 lg:py-2 border-b">Selected projects</Typography>
			{
				featuredProjects.map((entry) => {
					const{id, company, project, headline, eyebrow} = entry.data
					return (
						<article class="pt-12 lg:pt-24">
							<a href={`/projects/${id}`} class="group/link">
								<ProjectHero 
									transition:name={`projecthero-${id}`}
									id={id}
									eyebrow={eyebrow}
									company={company}
									project={project}
									headline={headline}
									key={id}
								/>
							</a>
						</article>
					)
				})
			}
		</Container>
</MainLayout>
